<div class="relative px-8 py-10 bg-white border-t border-gray-200 md:py-16 lg:py-24 xl:py-40 xl:px-0">
    <div id="pricing" class="container flex flex-col items-center h-full max-w-6xl mx-auto">
        <h2 class="my-5 text-base font-medium tracking-tight text-indigo-500 uppercase">
            id: {{idVotacion}}
        </h2>
        <h3
            class="w-full max-w-2xl px-5 px-8 mt-2 text-2xl font-black leading-tight text-center text-gray-900 sm:mt-0 sm:px-0 sm:text-6xl md:px-0">
            Resultados de la votación
        </h3>

        <div class="max-w-full mx-auto md:max-w-6xl sm:px-8">

            <div class="">
                <div class="">
                    <div class="overflow-hidden text-black bg-white border-t border-gray-100 rounded-lg shadow-sm">
                        <div class="block max-w-sm px-8 mx-auto mt-5 text-sm text-left text-black sm:text-md lg:px-6">
                            <h3 class="p-3 text-lg font-bold tracking-wide text-center uppercase">
                                Consorcio<span class="ml-2 font-light">{{this.idConsorcio}}</span>
                            </h3>
                            <h4
                                class="flex items-center justify-center pb-6 text-4xl font-bold text-center text-gray-900">
                                <span class="mr-1 -ml-2 text-lg text-gray-700"></span>PROVEEDOR
                            </h4>
                            <p class="text-sm text-gray-600 text-center">
                                Elección del proveedor del servicio de limpieza para el
                                edificio de la calle Siempre Viva 742:
                            </p>
                        </div>


                        <h3 class="pb-3 text-lg font-ligth tracking-wide text-center uppercase mt-2">
                            Opciones de voto
                        </h3>

                        <form id="vote" action="/consorcista/{{idConsorcista}}/votacion/{{idVotacion}}/vote"
                            method="POST">
                            {{#each options}}
                            <div class="flex flex-row col-span-6 sm:col-span-4 justify-between">
                                <div class="flex items-center block p-8 uppercase">

                                    <label
                                        class="block w-full px-6 py-4 mt-0 text-lg font-semibold text-center text-white bg-green-600 rounded shadow-sm">
                                        <h3 class="p-3 text-lg font-light tracking-wide text-center uppercase">{{this}}
                                        </h3>
                                    </label>
                                    <input type="number" name="option" id="vote"
                                        class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" />

                                    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 col-span-6 sm:col-span-4">

                                        <button form="vote" type="submit" class="inline-flex justify-center py-2 px-2 border
                                                    border-transparent shadow-sm text-sm font-medium rounded-full
                                                    text-white
                                                    bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2
                                                    focus:ring-offset-2 focus:ring-indigo-500">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                                fill="currentColor">
                                                <path fill-rule="evenodd"
                                                    d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                        </button>

                                    </div>


                                </div>
                            </div>

                            {{/each}}

                        </form>

                        <h4 class="pb-3 text-lg font-ligth tracking-wide text-center uppercase mt-2">
                            Saldo: {{this.saldo}} valores de voto
                        </h4>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>